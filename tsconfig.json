{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["utils/*"],
      "@framework/*": ["framework/*"],
      "@pages/*": ["pages/*"],
      // For TodosPage components
      "@todo/*": ["pages/TodosPage/components/*"],
      // For specific components
      "@components/todo-input": ["pages/TodosPage/components/TodoInput.ts"],
      "@components/todo-list": ["pages/TodosPage/components/TodoList.ts"],
      "@components/todo-footer": ["pages/TodosPage/components/TodosFooter.ts"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
